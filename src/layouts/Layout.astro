---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Nick Fitton - Senior Software Engineer" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  :root {
    --primary: #8a2eae;
    --secondary: #ebebeb;
    --background: #131313;
    --canvas: #1a1a1a;
    --highlight: #2c2c2c;
  }

  @font-face {
    font-family: RobotoSlab;
    src: url(/fonts/RobotoSlab-VariableFont_wght.ttf);
    font-weight: 100 900;
    font-style: normal;
    font-display: swap;
  }

  @font-face {
    font-family: FiraMono;
    src: url(/fonts/FiraMono-Regular.ttf);
    font-weight: 100 900;
    font-style: normal;
    font-display: swap;
  }

  body {
    margin: 0;
    margin-bottom: 5rem;
  }

  html {
    font-family: RobotoSlab, system-ui, sans-serif;
    background-color: var(--background);
    color: var(--secondary);
  }

  a {
    color: var(--secondary);
  }

